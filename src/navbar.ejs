<head>
    <link rel="stylesheet" href="./css/navbar.css">
</head>

<nav class="sidebar close">
    <header>
        <div class="image-text">
            <span class="image">
                <img src="./elemen/logo.png" alt="">
            </span>
            <div class="text logo-text">
                <span class="name">
                    <%= name %>
                </span>
                <span class="profession">
                    <%= profession %>
                </span>
            </div>
        </div>
        <i class='bx bx-chevron-right toggle'></i>
    </header>
    <div class="menu-bar">
        <div class="menu">
            <ul class="menu-links">
                <li class="nav-link <%= selected === 'dashboard' ? 'nav-link-selected' : '' %>">
                    <a href="/dashboard" clas>
                        <i class='bx bx-home-alt icon'></i>
                        <span class="text nav-text nav-text">Dashboard</span>
                    </a>
                </li>
                <li class="nav-link <%= selected === 'kasir' ? 'nav-link-selected' : '' %>">
                    <a href="/kasir">
                        <i class='bx bx-calculator icon'></i>
                        <span class="text nav-text">Kasir</span>
                    </a>
                </li>
                <li class="nav-link <%= selected === 'pendapatan' ? 'nav-link-selected' : '' %>">
                    <a href="/pendapatan">
                        <i class='bx bx-bar-chart-alt-2 icon'></i>
                        <span class="text nav-text">Pendapatan</span>
                    </a>
                </li>
                <li class="nav-link <%= selected === 'stock' ? 'nav-link-selected' : '' %>">
                    <a href="/stock">
                        <i class='bx bx-package icon'></i>
                        <span class="text nav-text">Stok Barang</span>
                    </a>
                </li>
            </ul>
        </div>
        <div class="bottom-content">
            <li class="logout">
                <a>
                    <i class='bx bx-log-out icon'></i>
                    <span class="text nav-text">Logout</span>
                </a>
            </li>
        </div>
    </div>
    <script>
        document.querySelector('.logout').addEventListener('click', (event) => {
            event.preventDefault(); // Prevent the default action (redirecting to the href)

            // Send a POST request to the logout API
            fetch('/api/logout', { method: 'POST' })
                .then(response => response.json())
                .then(data => {
                    if (data.loggedOut) {
                        // If the user was successfully logged out, redirect to the login page
                        window.location.href = '/login.html';
                    } else {
                        // Otherwise, display an error message
                        console.error('Error logging out');
                    }
                });
        });
    </script>
</nav>